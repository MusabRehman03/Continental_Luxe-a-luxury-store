<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <%- include('./partials/header') %>

  <div class="w-full min-h-screen px-20 py-16">
    <h2 class="text-3xl font-bold mb-10">Shopping Cart</h2>

    <% if (user.cart && user.cart.length > 0) { %>
      <!-- Cart Table -->
      <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
        <table class="w-full border border-gray-200 text-left">
          <thead class="bg-gray-100">
            <tr>
              <th class="p-3 border-b">Product</th>
              <th class="p-3 border-b">Price (Rs)</th>
              <th class="p-3 border-b">Quantity</th>
              <th class="p-3 border-b">Total (Rs)</th>
            </tr>
          </thead>
          <tbody>
            <% user.cart.forEach(function(product) { %>
              <tr class="border-b">
                <!-- Product Name -->
                <td class="p-3 flex items-center gap-3">
                  <% if (product.image) { %>
                    <img src="data:image/png;base64,<%= product.image.toString('base64') %>" 
                         class="h-16 w-16 object-cover rounded" 
                         alt="<%= product.name %>">
                  <% } else { %>
                    <div class="h-16 w-16 bg-gray-200 flex items-center justify-center rounded">No Image</div>
                  <% } %>
                  <span class="font-medium"><%= product.name %></span>
                </td>

                <!-- Price -->
                <td class="p-3"><%= product.price %></td>

                <!-- Quantity Controls -->
                <td class="p-3">
                  <div class="flex items-center gap-2">
                    <i class="ri-subtract-line w-7 h-7 bg-gray-200 cursor-pointer flex rounded-full items-center justify-center"></i>
                    <div class="px-2 py-1 rounded-md bg-gray-100 text-black"><%= product.quantity || 1 %></div>
                    <i class="ri-add-line w-7 h-7 bg-gray-200 cursor-pointer flex rounded-full items-center justify-center"></i>
                  </div>
                </td>

                <!-- Total -->
                <td class="p-3">
                  <%= (product.price * (product.quantity || 1)) %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Order Summary -->
      <div class="flex justify-end mt-10">
        <div class="w-full md:w-1/3 bg-white rounded-lg shadow-md p-8">
          <h3 class="text-xl font-semibold mb-4">Order Summary</h3>

          <div class="space-y-3">
            <div class="flex justify-between">
              <h4>Subtotal</h4>
              <h4>Rs <%= user.cart.reduce((sum, p) => sum + (p.price * (p.quantity || 1)), 0) %></h4>
            </div>

            <div class="flex justify-between">
              <h4>Discount</h4>
              <h4>Rs <%= user.cart.reduce((sum, p) => sum + (p.discount || 0), 0) %></h4>
            </div>

            <div class="flex justify-between">
              <h4>Platform Fee</h4>
              <h4>Rs 20</h4>
            </div>

            <div class="flex justify-between">
              <h4>Shipping Fee</h4>
              <h4 class="text-green-600">FREE</h4>
            </div>
          </div>

          <div class="w-full h-[1px] bg-gray-300 my-5"></div>

          <div class="flex justify-between text-lg font-bold">
            <h3>Total Amount</h3>
            <h3 class="text-green-600">
              Rs <%= user.cart.reduce((sum, p) => sum + (p.price * (p.quantity || 1)) - (p.discount || 0), 20) %>
            </h3>
          </div>

          <form action="/checkout" method="POST" class="mt-6">
            <button type="submit" class="w-full px-6 py-3 bg-green-600 text-white rounded-lg shadow hover:bg-green-700">
              Proceed to Checkout
            </button>
          </form>
        </div>
      </div>
    <% } else { %>
      <p class="text-lg text-gray-600">Your cart is empty</p>
    <% } %>
  </div>

</body>
</html>
